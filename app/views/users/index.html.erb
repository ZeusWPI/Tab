<% title "Users" %>

<%= render 'shared/big_titled_card', card_title: "All users" do %>
  <div class="flow-root">
    <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
      <table class="w-full text-sm text-left text-gray-500">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50">
          <tr>
            <th scope="col" class="px-6 py-3">Id</th>
            <th scope="col" class="px-6 py-3">
                <%= link_to 'Name', users_url(order_by: :name)  %>
                <%= render 'shared/sort_icon' if @sort_column == 'name' %>
            </th>
            <th scope="col" class="px-6 py-3">
                <%= link_to 'Balance', users_url(order_by: :balance)  %>
                <%= render 'shared/sort_icon' if @sort_column == 'balance' %>
            </th>
          </tr>
        </thead>
        <tbody>
        <% @users.each do |u| %>
          <tr class="border-b odd:bg-white even:bg-gray-50 hover:bg-gray-50">
            <td class="px-6 py-4">
              <%= u.id %>
            </td>
            <td class="px-6 py-4">
              <%= u.name %>
            </td>
            <td class="px-6 py-4">
              <%= euro_from_cents(u.balance) %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>
