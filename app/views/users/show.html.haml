%h2= @user.name
%table
  %thead
    %tr
      %th ID
      %th Debtor
      %th Creditor
      %th Amount
      %th Origin
      %th Message
      %th Time
  %tbody
    - @user.transactions.each do |t|
      %tr
        %td= t.id
        %td= t.debtor.name
        %td= t.creditor.name
        %td= t.amount
        %td= t.origin
        %td= t.message
        %td= t.created_at
