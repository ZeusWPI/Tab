<%= render 'shared/dashboard_card',
      card_title: "Requests",
      view_all_path: user_requests_path(current_user) do %>
  <ul role="list" class="divide-y divide-gray-200">
    <% if @requests.any? %>
      <% @requests.each do |r| %>
        <li class="py-3 sm:py-4">
          <div class="flex items-center space-x-4">
            <div class="flex-1 min-w-0">
              <p class="text-sm font-medium text-gray-900 truncate">
                <%= r.creditor.name %>
              </p>
              <p class="text-md text-gray-500 truncate">
                <%= r.message %>
              </p>
            </div>
            <div class="flex-initial items-center text-base font-semibold text-gray-900">
              <%= euro_from_cents r.amount %>
            </div>
            <div class="flex-initial items-center text-base font-semibold text-gray-900">
              <div class="inline-flex rounded-md shadow-sm" role="group">
                <%= button_to request_confirm_path(r), class: 'inline-flex items-center py-2 px-4 text-sm font-medium focus:outline-none text-white bg-green-700 hover:bg-green-800 focus:ring-4 focus:ring-green-300 rounded-l-lg border focus:z-10 focus:ring-2' do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                  </svg>
                <% end %>
                <%= button_to request_decline_path(r), class: 'inline-flex items-center py-2 px-4 text-sm font-medium focus:outline-none text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 rounded-r-lg border focus:z-10 focus:ring-2' do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636" />
                  </svg>
                <% end %>
              </div>
            </div>
          </div>
        </li>
      <% end %>
    <% else %>
      None!
    <% end %>
  </ul>
<% end %>
