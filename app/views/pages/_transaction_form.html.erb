<div class="p-4 mb-4 bg-white rounded-lg border shadow-md sm:p-8">
  <div class="flex justify-between items-center mb-4">
    <h5 class="text-xl font-bold leading-none text-gray-900">Transfer</h5>
  </div>
  <div class="flow-root">
    <transaction-form-component
      props-json='{
        "user_name": <%= current_user.name.to_json %>,
        "balance": <%= current_user.balance.to_json %>,
        "peers": <%= User.all.order(:name).pluck(:name).to_json %>,
        "csrf_token": <%= form_authenticity_token.to_json %>
      }'
    />
  </div>
</div>
